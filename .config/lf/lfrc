# Basic settings
set hidden true
set icons true

# Custom functions
cmd mkdir ${{
    printf "Directory Name: "
    read -r ans
    mkdir "$ans" && notify-send "Successfully created directory '$ans'"
}}

cmd mkfile ${{
    printf "File Name: "
    read -r ans
    "$EDITOR" "$ans"
}}

cmd remove ${{
    base=$(basename "$f")
    ans=$(printf "Yes\nNo\n" | fzf-tmux --reverse --prompt="Delete '$base': ")

    [ -z "$ans" ] && exit 0

    case "$ans" in
        "Yes") rm -r "$f" && notify-send "Removed '$base'" && break ;;

        "No") break ;;

        *) notify-send "Invalid option" ;;
    esac
}}

# Hacky solution to open images using lf
cmd view_image ${{
    if [ $(echo "$f" | grep -E "\.(svg|png|jpg|jpeg|gif|mpeg|mpg)") ]
    then
        sxiv "$f" &
    fi
}}

# Remove some defaults
map d
map m

# Basic functions
map . set hidden!
map p paste
map x cut
map y copy
map D remove
map i view_image
map <enter> open
map R reload
map mf mkfile
map md mkdir

# vim: ft=rc
