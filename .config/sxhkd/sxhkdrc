## Program hotkeys ##
# Rofi
alt + Tab
        rofi -show window

super + r
        rofi -show drun

# Emacs daemon
super + e
        emacsclient -c -n

# Alacritty
super + x
        alacritty

# Browser
super + b
        firefox

# Messaging
super + m
        telegram-desktop

# Image editing
super + g
        gimp

# Screenshots
super + p
        flameshot full -p $HOME/.local/screenshots

super + shift + p
        flameshot gui -p $HOME/.local/screenshots

# Lockscreen
super + shift + n
        betterlockscreen --lock blur

# Reload polybar
super + Escape
        $HOME/.config/polybar/launch.sh

# Reload sxhkdrc configuration
super + shift + Escape
        pkill -USR1 -x sxhkd

## bspwm hotkeys ##
# Quit/restart bspwm
super + alt + {q,r}
        bspc {quit,wm -r}

# Close and kill application
super + q
        bspc node -{c,k}

# Change window state
super + f
        bspc node focused.tiled -t fullscreen

super + t
        bspc node focused.fullscreen -t tiled

super + shift + f
        bspc node focused.tiled -t floating

super + shift + t
        bspc node focused.floating -t tiled

# Focus node in given direction
super + {_,shift + }{h,j,k,l}
        bspc node -{f,s} {west,south,north,east}

# Focus to next/previous window in current workspace
super + {_,shift}c
        bspc node -f {next,prev}.local.!hidden.window

# Focus to left/right between workspaces
super + bracket{left,right}
        bspc desktop -f {prev,next}.local

# Focus to last window
super + {grave,Tab}
        bspc {node,desktop} -f last

# Focus to next/previous window in focus history
super + {o,i}
        bspc wm -h off; \
        bspc node {older,newer} -f; \
        bspc wm -h on

# Focus or send to specific workspace
super + {_,shift + }{1-9,0}
        bspc {desktop -f, node -d} '^{1-9,10}'

# Expand window outward
super + alt + {h,j,k,l}
        bspc node -z {left -20 0, bottom 0 20, top 0 -20, right 20 0}

# Contract window inward
super + alt + shift {h,j,k,l}
        bspc node -z {right -20 0, top 0 20, bottom 0 -20, left 20 0}

# Move floating window
super + {Left,Down,Up,Right}
        bspc node -v {-20 0,0 20,0 -20,20 0}

## Function hotkeys ##
# Media keys
XF86AudioPrev
        mpc prev
        # playerctl previous

XF86AudioNext
        mpc next
        # playerctl next

XF86AudioPlay
        mpc toggle
        # playerctl play-pause

# Volume keys
XF86AudioLowerVolume
        amixer -D pulse sset Master 5%-

XF86AudioRaiseVolume
        amixer -D pulse sset Master 5%+

XF86AudioMute
        amixer -D pulse sset Master toggle

# Brightness keys (wip)
XF86MonBrightnessUp
        changebrightness up

XF86MonBrightnessDown
        changebrightness down
