# Aliases and functions sourced in ~/.zshrc

mkdirg () { mkdir -p "$1" && cd "$1" || exit 1 ;}

cpg () {
    if [ -d "$2" ]
    then
        cp "$1" "$2" && cd "$2" || exit 1
    else
        cp "$1" "$2"
    fi
}

mvg () {
    if [ -d "$2" ]
    then
        mv "$1" "$2" && cd "$2" || exit 1
    else
        mv "$1" "$2"
    fi
}

# Extra verbosity you almost always are going to want on
alias \
    cp="cp -iv" \
    rm="rm -Iv" \
    mv="mv -iv" \
    mkdir="mkdir -v" \
    rmdir="rmdir -v" \
    xz="xz -v"

# Colorize commands when possible
alias \
    ls="ls --color=auto" \
    grep="grep --color=auto" \
    fgrep="fgrep --color=auto" \
    egrep="egrep --color=auto" \
    diff="diff --color=auto" \
    ip="ip -color=auto" \
    tree="tree -C"

# Shortcuts for typing longer commands
alias \
    ll="ls -alF" \
    l1="ls -1F" \
    la="ls -AF" \
    l="ls -CF" \
    EDITOR="nvim" \
    e="$EDITOR" \
    ez="$EDITOR ~/.zshrc" \
    ea="$EDITOR ~/.zsh_aliases" \
    z="zathura" \
    bd='cd "$OLDPWD"' \
    pwd="pwd -P" \
    gm="git push origin main" \
    rbn="shutdown -r now" \
    sdn="shutdown -h now"

# vim: ft=sh
