# Some helpful aliases.
# File creation, destruction, etc
alias cp='cp -iv'
alias rm='rm -Idv'
alias mv='mv -iv'
alias mkdir='mkdir -v'
alias rmdir='rmdir -v'

# Listings
alias ll='ls -alF'
alias l1='ls -1F'
alias la='ls -AF'
alias l='ls -CF'

# Directory traversal
alias bd='cd "$OLDPWD"'

# Print where I `really' am
alias pwd='pwd -P'

# Abusing my CPU
alias zip='zip -9v'
alias gzip='gzip -9v'
alias bzip2='bzip2 -9v'
alias xz='xz -v'

# Python aliases
alias python='/usr/bin/python3'
alias ipy='$HOME/.local/bin/ipython'

# Set shortcut for neovim
alias e='/usr/bin/nvim'


# Some helpful functions.
mkdirg () {
    mkdir -p "$1" && cd "$1" || exit 1
}

cpg () {
    if [ -d "$2" ]
    then
        cp "$1" "$2" && cd "$2" || exit 1
    else
        cp "$1" "$2"
    fi
}

mvg () {
    if [ -d "$2" ]
    then
        mv "$1" "$2" && cd "$2" || exit 1
    else
        mv "$1" "$2"
    fi
}

# vim: ft=sh
